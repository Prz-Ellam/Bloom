{
    "name": "prz-ellam/bloom",
    "description": "PHP minimalist web application framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bloom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bloom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "phpunit --color=always --testdox -v tests/",
        "fixer": "php-cs-fixer fix --diff"
    },
    "authors": [
        {
            "name": "Prz-Ellam",
            "email": "PerezAlex088@outlook.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.9"
    }
}
